<%= form_with(url: @url, method: :get, class: "px-8 py-6 inline-flex gap-6") do |form| %>
    <%= tag.div(class: "flex flex-col gap-2") do %>

        <% @fields.each do |field| %>
			<%= form.label field[:field], field[:label].to_s.capitalize %>
			<%= form.text_field field[:field], value: filter_params[field[:field]],
					class: "border-b-2 focus:border-slate-400 focus:outline-none" %>
        <% end %>

        <%= form.submit "Filtra" %>
    
    <% end %>
<% end %>