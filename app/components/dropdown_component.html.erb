<%= tag.div data: {controller: "rd-dropdown", rd_dropdown_position_value: @position, rd_dropdown_offset_value: @offset, action: "keyup->rd-dropdown#hideWithKey click@window->rd_dropdown#hide turbo:before-cache@window->rd-dropdown#hide"}, class: container_css do %>
  <%= tag.button button, data: {rd_dropdown_target: "button", action: "rd-dropdown#toggle"}, aria: {haspopup: true, controls: "menu"}, class: "flex" %>

  <%= tag.div tabindex: 0, role: "menu", data: menu_data, hidden: true, class: menu_css do %>
    <%= tag.div leader, class: class_names("border-b px-3 py-2", {"text-gray-700 border-gray-100": light_theme?, "text-gray-200 border-gray-700": dark_theme?}) if leader? %>

    <%= tag.ul do %>
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    <% end if items? %>

    <%= tag.div trailer, class: class_names("border-t px-3 py-2", {"text-gray-700 border-gray-200/50": light_theme?, "text-gray-200 border-gray-700": dark_theme?}) if trailer? %>
  <% end %>
<% end %>
