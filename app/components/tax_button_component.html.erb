<% if @style == :link %>

  <%= link_to url,
              target: @target,
              data: data_attr, 
              class: css_class do %>
      <%= inline_svg_tag svg_file  %>
      <%= tag.div caption, class: "hidden sm:block" %>
  <% end %>

<% elsif @style == :dropdown %>

  <%= tag.div class: css_class do %>
      <%= inline_svg_tag svg_file  %>
      <%= tag.div( caption, class: "hidden sm:block" ) if caption %>
  <% end %>

<% end %>


