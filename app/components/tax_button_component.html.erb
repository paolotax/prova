<% if @style == :link %>

  <%= link_to url,
              target: @target,
              data: data_attr, 
              class: css_class do %>
      <%= inline_svg_tag(svg_file) if svg_file %>
      <%= tag.div( caption, class: [ "hidden": !svg_file.nil?, "px-1 text-base font-normal": svg_file.nil?, "sm:block": true ]) if caption %>
  <% end %>

<% elsif @style == :dropdown %>

  <%= tag.div class: css_class do %>
      <%= inline_svg_tag(svg_file) if svg_file %>
      <%= tag.div( caption, class: [ "hidden": !svg_file.nil?, "px-1 text-base font-normal": svg_file.nil?, "sm:block": true ]) if caption %>
  <% end %>

<% elsif @style == :button %>

  <%= button_to url,
              method: :delete,
              target: @target,
              data: data_attr, 
              class: css_class do %>
      <%= inline_svg_tag(svg_file) if svg_file %>
      <%= tag.div( caption, class: [ "hidden": !svg_file.nil?, "px-1 text-base font-normal": svg_file.nil?, "sm:block": true ]) if caption %>
  <% end %>

<% end %>


