<%= link_to url,
            data: data_attr, 
            class: [
                "flex sm:flex-col items-center gap-x-2 py-2 px-3 
                 text-sm text-center font-semibold rounded-md shadow-md cursor-pointer 
                 transition duration-150 ease-in-out": true,
                
                "bg-blue-600 text-white hover:bg-blue-500 active:bg-blue-700 
                focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-blue-600": color == "blue",

                "bg-white text-black hover:bg-gray-200 active:bg-gray-100 
                focus:outline focus:outline-2 focus:outline-offset-2": color == "white",

            ] do %>
    <%= inline_svg_tag svg_file  %>
    <%= caption %>
<% end %>

