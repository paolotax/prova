wb = xlsx_package.workbook

fields = [ "id", "titolo", "classe", "scuola", "citta", "classe_id", "note", "numero_sezioni", "numero_copie" ]

wb.add_worksheet(name: "Foglio 1") do |sheet|
 
  sheet.add_row  fields
  
  @adozioni.each do |row|   
    sheet.add_row [ row.id, row.titolo, row.classe_e_sezione, row.scuola, row.citta, row.classe_id, row.note, row.numero_sezioni, row.numero_copie ]
  end
end
