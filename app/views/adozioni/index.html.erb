            </svg>
            <span class="">Excel</span>        
        <% end %>  

        <%= link_to new_adozione_path(@adozione), 
                data: { turbo_frame: :modal, action: "click->dialog#open"}, 
                class: "w-16 btn btn-indigo" do %>
            <%= inline_svg_tag "icon-cash.svg" %>
            <span>Sbocci?</span>
        <% end %>
     <% end %>

<% end %>

  <%= tag.div "adozioni-per-titolo", class: "pb-6 flex flex-wrap gap-1" do%>
    
    <% current_user.adozioni.per_titolo.sum(:numero_sezioni).each do |k, v| %>
      <%= tag.div class: "px-2 py-1.5 bg-red-400 text-xs font-semibold text-white rounded-md" do %>
        <%= link_to "#{k[0]} - #{v}", adozioni_path(libro_id: k[1]), class: ""  %>
      <% end %>
    <% end %>

    <% current_user.adozioni.per_scuola_hash.each do |scuola| %>
      <%= tag.div class: "px-2 py-1.5 bg-blue-400 text-xs font-semibold text-white rounded-md" do %>
         <%= link_to "#{scuola[:nome_scuola]} - #{scuola[:numero_sezioni]}", adozioni_path(scuola_id: scuola[:scuola_id]), class: ""  %>
      <% end %>
    <% end %>
  
  <% end %>
  



  <div id="adozioni" class="min-w-full">
    <%= render @adozioni %>
  </div>

