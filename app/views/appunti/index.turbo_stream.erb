<%= turbo_stream.append :appunti do %>
  <%= render @appunti %>
<% end %>
<%= turbo_stream.replace :pagination do %>
  <% if @pagy.next.present? %>
    <%= turbo_frame_tag :pagination,
                loading: :lazy,
        src: appunti_path(request.query_parameters.merge(format: :turbo_stream, page: @pagy.next)) %>
  <% end %>
<% end %>