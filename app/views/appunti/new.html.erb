<% unless hotwire_native_app? %>
    <%= render "shared/turbo_dialog" do %>
        <div data-action="turbo:submit-end->old-dialog#submitEnd" class="w-full">
            <h2 class="font-bold text-2xl">Crea Appunto</h2>
            <%= render "form", appunto: @appunto %>
        </div>
    <% end %>
<% else %>
    <% content_for :title, "Crea Appunto" %>
    <div class="p-4">
        <%= render "form", appunto: @appunto %>
    </div>
<% end %>

