 <%# locals: ( appunto: ) -%>

<%= tag.div id: "appunto-riga-#{dom_id(appunto)}", 
    class: "group first:border-t sm:first:border-t-0 rounded-0 first:rounded-t-lg last:rounded-b-lg px-4 sm:px-2 py-1.5 bg-purple-200 hover:bg-purple-500 hover:text-white" do %>
    <%= link_to edit_appunto_path(appunto),
                data: { turbo_frame: :modal, action: "click->dialog#open"},
                class: "flex items-center justify-between" do %>
        <%= tag.div class: "flex sm:flex-col items-start" do %>
            <%= tag.div appunto.nome, class: "text-sm text-gray-600 font-semibold group-hover:text-white " %>
            <%= tag.div appunto.body, class: "text-sm text-gray-500 group-hover:text-white " %> 
            <%= tag.div appunto.content, class: "text-sm text-gray-500 group-hover:text-white " %> 
        <% end %>
        <%= tag.div l( appunto.created_at, format: "%b %d").downcase , class: "text-sm text-gray-400 text-right group-hover:text-white " %>
    <% end %>
<% end %>