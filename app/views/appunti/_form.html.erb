<%= form_with(model: appunto, class: "max-h-screen w-full max-w-lg relative") do |form| %>
  <% if appunto.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(appunto.errors.count, "error") %> prohibited this appunto from being saved:</h2>

      <ul>
        <% appunto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field :import_scuola_id, value: @scuola&.id %>
  <%= form.hidden_field :import_adozione_id, value: @adozione&.id %>
  
  <div class="mt-8 text-2xl font-semibold flex flex-col" >
     <p><%= @scuola.DENOMINAZIONESCUOLA %></p>
     <span class="text-sm text-gray-500" ><%= @adozione&.classe_e_sezione %></span>
     <span class="text-xs text-gray-400"><%= @adozione&.titolo %></span>
  </div>

  <div class="my-5">
    <%= form.label :nome, class: "label" %>
    <%= form.text_field :nome, class: "field", autofocus: :true %>
  </div>

  <div class="my-5">
    <%= form.label :image, class: "label" %>    
    <%= form.file_field :image, class: "field" %>
  </div>

  <div class="my-5">

    <%= form.text_area :body, rows: 5, class: "field" %>

  </div>

  <div class="inline flex justify-end">
    <%= form.submit "Salva", 
        class: "inline-flex w-full justify-center rounded-md bg-indigo-600 px-5 py-3 font-semibold text-white shadow-sm hover:bg-indigo-500 sm:ml-3 sm:w-auto"
    %>
  </div>
<% end %>

<div class="flex flex-col sm:flex-row-reverse sm:justify-between mt-8">
  
  <%= link_to "<- appunti", appunti_path, data: { action: "dialog#close" }, class: "w-full sm:w-auto rounded-lg px-3 py-2  bg-gray-100 inline-block text-sm  font-medium text-center" %>

  <% if action_name != "new" %>
      <%= button_to "Elimina appunto", appunto_path(appunto), method: :delete, class: "w-full sm:w-auto mt-5 sm:mt-0 rounded-lg py-3 px-5 bg-gray-100 text-red-400 inline-block text-sm font-medium" %>
  <% end %>

</div>
      
