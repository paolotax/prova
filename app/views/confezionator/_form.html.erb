<%= form_with url: fascicoli_libro_path(libro), method: :post do |f| %>
    <%= hidden_field_tag "confezione_riga[confezione_id]", libro.id %>
    <div class="flex flex-row gap-4 items-center">
        <div class="w-full my-5 cb-tax cb-font-size-sm flex flex-col gap-2" id="select-clientable">
            <%= combobox_tag "confezione_riga[fascicolo_id]", libri_path, placeholder: "aggiungi fascicolo..." %>
        </div>

        <%= f.button type: "submit", class: "h-7 w-7 rounded-full bg-indigo-600 p-1 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>            
        <% end%>  
    </div>
<% end %>
