<%= turbo_stream.append "tappe-list-#{dom_id(@tappa.giro) if @tappa.giro}-#{dom_id @tappa.tappable}" do %>
    <%= render partial: "tappe/tappa_menu", locals: { tappa: @tappa } %>
<% end %>

<%= turbo_stream.append "scuola-tappe-list" do %>
    <%= render partial: "tappe/tappa", locals: { tappa: @tappa } %>
<% end %>

<%= turbo_stream.replace "no-tappe" do %>
    <%= "" %>
<% end %>

<%= turbo_stream.append "giorno-#{@tappa.data_tappa.to_s}" do %>
    <%= render @tappa %>
<% end %>