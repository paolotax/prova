<%= tag.div id: "tappa-data-#{dom_id(tappa)}", 
            class: [
                ".tappa-import_scuola-#{tappa.tappable.id} h-8 w-8 p-1 rounded-full font-semibold flex flex-col justify-center items-center cursor-pointer border shadow-lg",
                "text-white bg-pink-500 hover:bg-pink-600":   tappa.data_tappa.to_date >= Time.now.to_date + 2.day,
                "text-white bg-slate-400 hover:bg-slate-700":   tappa.data_tappa.to_date < Time.now.to_date,
                "text-white bg-green-500 hover:bg-green-600":  tappa.data_tappa.to_date == Time.now.to_date,
                "text-white bg-yellow-400 hover:bg-yellow-600": tappa.data_tappa.to_date == Time.now.to_date + 1.day
            ] do %>
    
    <% if tappa.data_tappa.to_date >= Time.now.to_date %>
        <%= tag.div l(tappa.data_tappa, format: "%a").downcase, class: "text-xs leading-none" %>
        <%= tag.div tappa.data_tappa.strftime("%d"), class: "text-sm leading-none" %>
    <% else %>
        <%= tag.div tappa.data_tappa.strftime("%d"), class: "text-sm leading-none" %>
        <%= tag.div l(tappa.data_tappa, format: "%b").downcase, class: "text-xs leading-none" %>
    <% end %>

<% end %>
