  <% if tappa.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(tappa.errors.count, "error") %> prohibited this tappa from being saved:</h2>

      <ul>
        <% tappa.errors.each do |error| %>
