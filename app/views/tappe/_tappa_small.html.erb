<%# locals: (tappa:, check_box: true) -%>

<%= tag.div id: dom_id(tappa),
        class: "group px-2 py-2  grid grid-cols-5 items-center gap-x-2" do %>

    <%= check_box_tag "tappa_ids[]", tappa.id, nil, {
                      multiple: true,
                      form: :bulk_update_tappe_form,
                      checked: false,
                      class: "col-span-1 rounded rounded-full border-2 border-gray-300 h-5 w-5 ml-2",
                      data: { tax_checkbox_select_all_target: 'checkbox' }
        } if check_box %>
    
    <%= tag.div class: "#{ check_box ? "" : "col-start-2" } col-span-1" do %> 
        <%= render partial: "tappe/tappa_menu", locals: { tappa: tappa } %>
    <% end %>


    <%= tag.div class: "col-span-3 flex flex-col" do %>

        <%= tag.div tappa&.giro&.titolo, class: "text-xs italic font-semibold text-gray-700" %>   
        
        <%= tag.div tappa.titolo, class: "text-xs italic font-semibold text-gray-400" %>    

    <% end %>  
<% end %>
      