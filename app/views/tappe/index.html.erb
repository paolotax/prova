<div class="min-h-screen bg-gray-900">
  <!-- Header -->
  <div class="bg-gray-800 shadow-lg sticky top-0 z-10 border-b border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <h1 class="text-3xl font-bold text-white">Tappe</h1>
    </div>
  </div>

  <!-- Navigazione Settimana -->
  <div class="bg-gray-800 border-b border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <%= link_to tappe_path(week_offset: @week_offset - 1, giro_ids: params[:giro_ids]),
            class: "flex items-center space-x-2 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <span>Settimana Precedente</span>
        <% end %>

        <div class="text-center">
          <div class="text-sm text-gray-400">Settimana</div>
          <div class="text-xl font-bold text-white">
            <%= I18n.l(@current_week_start, format: "%d %b") %> - <%= I18n.l(@current_week_end, format: "%d %b %Y") %>
          </div>
          <div class="text-xs text-gray-500"><%= @tappe.count %> tappe</div>
        </div>

        <%= link_to tappe_path(week_offset: @week_offset + 1, giro_ids: params[:giro_ids]),
            class: "flex items-center space-x-2 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors" do %>
          <span>Settimana Successiva</span>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>

      <% if @week_offset != 0 %>
        <div class="mt-3 text-center">
          <%= link_to "Torna a Questa Settimana", tappe_path(giro_ids: params[:giro_ids]),
              class: "text-sm text-indigo-400 hover:text-indigo-300" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Filtri -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <%= form_with url: tappe_path, method: :get, class: "bg-gray-800 rounded-lg shadow-xl p-6 border border-gray-700" do |f| %>
      <%= hidden_field_tag :week_offset, @week_offset %>

      <!-- Filtro Giri -->
      <div>
        <%= f.label :giro_ids, "Filtra per Giri", class: "block text-sm font-medium text-gray-300 mb-3" %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-2">
          <% @giri_disponibili.each do |giro| %>
            <label class="flex items-center space-x-2 p-3 rounded-lg hover:bg-gray-700 cursor-pointer transition-colors border border-gray-700">
              <%= check_box_tag "giro_ids[]", giro.id,
                  params[:giro_ids]&.include?(giro.id.to_s),
                  class: "rounded text-indigo-500 bg-gray-700 border-gray-600 focus:ring-indigo-500 focus:ring-offset-gray-800" %>
              <span class="text-sm text-gray-300"><%= giro.titolo %></span>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Pulsanti -->
      <div class="flex justify-end space-x-3 mt-4">
        <%= link_to "Reset", tappe_path(week_offset: @week_offset),
            class: "px-4 py-2 border border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 focus:ring-offset-gray-800" %>
        <%= f.submit "Filtra",
            class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 focus:ring-offset-gray-800" %>
      </div>
    <% end %>
  </div>

  <!-- Lista Tappe Raggruppate -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <% if @tappe_raggruppate.any? %>
      <div class="space-y-6">
        <% @tappe_raggruppate.sort_by { |data, _| data }.each do |data, tappe| %>
          <!-- Gruppo Giorno -->
          <div class="bg-gray-800 rounded-lg shadow-xl overflow-hidden border border-gray-700">
            <!-- Header Giorno -->
            <div class="bg-gradient-to-r from-indigo-600 to-purple-700 px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="bg-gray-900 rounded-lg px-4 py-2 shadow-lg border border-gray-700">
                    <div class="text-center">
                      <div class="text-2xl font-bold text-indigo-400"><%= data.strftime("%d") %></div>
                      <div class="text-xs font-semibold text-gray-400 uppercase"><%= I18n.l(data, format: "%b") %></div>
                    </div>
                  </div>
                  <div>
                    <h2 class="text-xl font-bold text-white"><%= I18n.l(data, format: "%A") %></h2>
                    <p class="text-indigo-200 text-sm"><%= tappe.count %> <%= tappe.count == 1 ? "tappa" : "tappe" %></p>
                  </div>
                </div>
                <div class="text-white text-sm">
                  <%= I18n.l(data, format: :long) %>
                </div>
              </div>
            </div>

            <!-- Lista Tappe del Giorno -->
            <div class="divide-y divide-gray-700">
              <% tappe.each_with_index do |tappa, index| %>
                <div class="<%= index.even? ? 'bg-gray-800' : 'bg-gray-750' %> hover:bg-gray-700 transition-colors duration-150">
                  <div class="px-6 py-4">
                    <div class="flex items-start justify-between space-x-4">
                      <!-- Info Tappa -->
                      <div class="flex-1 min-w-0">
                        <!-- Scuola -->
                        <div class="flex items-center space-x-2 mb-2">
                          <%= link_to import_scuola_path(tappa.tappable, selected_tab: 4),
                              class: "flex items-center space-x-2 group" do %>
                            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-indigo-900 flex items-center justify-center ring-2 ring-indigo-500">
                              <span class="text-indigo-300 font-semibold text-sm">
                                <%= tappa.tappable.DENOMINAZIONESCUOLA.to_s.first(2).upcase %>
                              </span>
                            </div>
                            <div class="min-w-0 flex-1">
                              <p class="text-sm font-semibold text-gray-200 group-hover:text-indigo-400 truncate">
                                <%= tappa.tappable.DENOMINAZIONESCUOLA %>
                              </p>
                              <p class="text-xs text-gray-500">
                                <%= tappa.tappable.DESCRIZIONECOMUNE %>
                              </p>
                            </div>
                          <% end %>
                        </div>

                        <!-- Giri -->
                        <% if tappa.giri.any? %>
                          <div class="flex flex-wrap gap-1.5 mb-2">
                            <% tappa.giri.each do |giro| %>
                              <%= link_to giro.titolo, giro_path(giro),
                                  class: "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-900 text-indigo-300 hover:bg-indigo-800 border border-indigo-700",
                                  data: { turbo_frame: "_top" } %>
                            <% end %>
                          </div>
                        <% end %>

                        <!-- Titolo/Note -->
                        <% if tappa.titolo.present? %>
                          <p class="text-sm text-gray-400 italic mt-2 line-clamp-2">
                            <%= simple_format(tappa.titolo) %>
                          </p>
                        <% end %>
                      </div>

                      <!-- Azioni -->
                      <div class="flex-shrink-0 flex items-center space-x-2">
                        <%= link_to edit_tappa_path(tappa),
                            class: "p-2 text-gray-500 hover:text-indigo-400 transition-colors",
                            title: "Modifica" do %>
                          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                        <% end %>
                        <%= button_to tappa_path(tappa),
                            method: :delete,
                            form: { data: { turbo_confirm: "Sei sicuro?" } },
                            class: "p-2 text-gray-500 hover:text-red-500 transition-colors",
                            title: "Elimina" do %>
                          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-gray-800 rounded-lg shadow-xl p-12 text-center border border-gray-700">
        <svg class="mx-auto h-12 w-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-300">Nessuna tappa in questa settimana</h3>
        <p class="mt-1 text-sm text-gray-500">Prova a navigare ad un'altra settimana o a modificare i filtri.</p>
      </div>
    <% end %>
  </div>
</div>
