   <%= tag.div class: "w-1/3" do %>
      <%= component "heading", level: "h3" do %>
         Programmate
      <% end %>

      <%= turbo_frame_tag :search_results, src: giro_tappe_path(@giro, filter: "programmate", sort: "per_data"), loading: :lazy, class: "w-full" %>
