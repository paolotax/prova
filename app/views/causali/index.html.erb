<div class="w-full">

  <% content_for :title, "Causali" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Causali</h1>
    <%= link_to "New causale", new_causale_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="causali" class="min-w-full">
    <% @causali.each do |causale| %>
      <%= render causale %>
      <p>
        <%= link_to "Show this causale", causale, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
