<div id="<%= dom_id user_scuola %>" 
    class="bg-white shadow rounded-lg mb-2 p-4 flex items-center" 
    data-tax-sortable-update-url="<%= sort_user_scuola_path(user_scuola) %>">
  
    <div class="handle cursor-move text-gray-400 mr-3 text-xl">
        ⋮⋮
    </div>
  
    <div class="flex-grow flex flex-col sm:flex-row sm:items-center">
        <div class="flex-grow flex flex-col">
            <div class="font-semibold text-gray-500">
                <%= user_scuola.tipo_scuola %>
            </div>
            <div class="font-semibold">
                <%= user_scuola.denominazione %>
            </div>
        </div>

        <div class="text-sm text-gray-500">
            <%= user_scuola.comune %> 
        </div>
    </div>

    <div class="text-gray-400 ml-4">
        <%= button_to user_scuola_path(user_scuola) , 
                method: :delete, data: { turbo_method: :delete, turbo_confirm: "Sei sicuro di voler eliminare questa scuola?" } ,
                class: "mx-2 h-7 w-7 flex text-red-200 justify-center items-center text-center rounded-full bg-red-600 text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" do %>
            <%= inline_svg_tag "icon-trash.svg" %>
        <% end %>
    </div>
</div>
