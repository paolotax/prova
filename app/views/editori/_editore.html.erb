<div id="<%= dom_id editore %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Editore:</strong>
    <%= editore.editore %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gruppo:</strong>
    <%= editore.gruppo %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this editore", editore, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this editore", edit_editore_path(editore), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
