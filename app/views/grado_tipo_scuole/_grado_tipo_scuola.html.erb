<div id="<%= dom_id grado_tipo_scuola %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Grado:</strong>
    <%= grado_tipo_scuola.grado %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tipo:</strong>
    <%= grado_tipo_scuola.tipo %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this grado tipo scuola", grado_tipo_scuola, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this grado tipo scuola", edit_grado_tipo_scuola_path(grado_tipo_scuola), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
