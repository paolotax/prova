<%= turbo_frame_tag dom_id(@profile) do %>
           
    <%= tag.div class: "w-full mx-auto sm:max-w-2xl gap-4" do %>

        <%= render "profile_steps_header" %>

        <%= form_with model: @profile, url: wizard_path, data: { turbo_action: "advance" }, class: "px-2 py-5" do |f| %>
            
            <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
                <%= f.label :nome, class: "text-sm" %>
                <%= f.text_field :nome, class: "w-full px-2 py-1 outline-none border-b-2 border-gray-300 hover:border-slate-500 focus:border-slate-500 "%>
                <%= tag.p f.object.errors.full_messages_for(:nome)&.first, class: "text-sm text-red-500" %>
            <% end %>

            <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
                <%= f.label :cognome, class: "text-sm" %>
                <%= f.text_field :cognome, class: "w-full px-2 py-1 outline-none border-b-2 border-gray-300 hover:border-slate-500 focus:border-slate-500 "%>
                <%= tag.p f.object.errors.full_messages_for(:cognome)&.first, class: "text-sm text-red-500" %>
            <% end %>

            <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
                <%= f.label :cellulare, class: "text-sm" %>
                <%= f.text_field :cellulare, class: "w-full px-2 py-1 outline-none border-b-2 border-gray-300 hover:border-slate-500 focus:border-slate-500 "%>
                <%= tag.p f.object.errors.full_messages_for(:cellulare)&.first, class: "text-sm text-red-500" %>
            <% end %>

            <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
                <%= f.label :email, class: "text-sm" %>
                <%= f.text_field :email, class: "w-full px-2 py-1 outline-none border-b-2 border-gray-300 hover:border-slate-500 focus:border-slate-500 "%>
                <%= tag.p f.object.errors.full_messages_for(:email)&.first, class: "text-sm text-red-500" %>
            <% end %>

            <%= tag.div(class: "mt-5 w-full inline-flex gap-2 items-center justify-end mb-7") do%>
                <%= f.submit 'Avanti', name: "next", class: "px-4 py-2 bg-gray-500 text-white" %>
            <% end %>
        <% end %>

        <%= render "profile_steps_footer" %>

    <% end %>
<% end %>