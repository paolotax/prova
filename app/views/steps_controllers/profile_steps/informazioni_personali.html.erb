<%= turbo_frame_tag dom_id(@profile) do %>
           
    <%= tag.div class: "w-full mx-auto sm:max-w-2xl gap-4" do %>

        <%= render partial: "steps_controllers/common/steps_header", locals: { resource: @profile } %> 

        <%= form_with model: @profile, url: wizard_path, data: { turbo_action: "advance" }, class: "px-2 py-5" do |f| %>
            
            <%= tag.div class: "mt-5" do %>
                <%= label_for form: f, field: 'nome', label: 'Nome' %>
                <%= f.text_field :nome, class: "block w-full mt-2 px-2 py-1 outline-none border-0 focus:ring-0 border-b-2 border-transparent hover:border-slate-500 focus:border-b-2 focus:border-slate-500"%>
            <% end %>

            <%= tag.div class: "mt-5" do %>
                <%= label_for form: f, field: 'cognome', label: 'Cognome' %>
                <%= f.text_field :cognome, class: "block w-full mt-2 px-2 py-1 outline-none border-0 focus:ring-0 border-b-2 border-transparent hover:border-slate-500 focus:border-b-2 focus:border-slate-500"%>
            <% end %>

            <%= tag.div class: "mt-5" do %>
                <%= label_for form: f, field: 'cellulare', label: 'Cellulare' %>
                <%= f.text_field :cellulare, class: "block w-full mt-2 px-2 py-1 outline-none border-0 focus:ring-0 border-b-2 border-transparent hover:border-slate-500 focus:border-b-2 focus:border-slate-500"%>
            <% end %>

            <%= tag.div class: "mt-5" do %>
                <%= label_for form: f, field: 'email', label: 'Email' %>
                <%= f.text_field :email, class: "block w-full mt-2 px-2 py-1 outline-none border-0 focus:ring-0 border-b-2 border-transparent hover:border-slate-500 focus:border-b-2 focus:border-slate-500"%>
            <% end %>

            <%= tag.div(class: "mt-10 w-full inline-flex gap-2 items-center justify-end mb-7") do%>
                <%= f.submit 'Avanti', name: "next", class: "px-4 py-2 bg-gray-500 text-white" %>
            <% end %>

        <% end %>

        <%= render partial: "steps_controllers/common/steps_footer", locals: { resource: @profile } %> 

    <% end %>
<% end %>