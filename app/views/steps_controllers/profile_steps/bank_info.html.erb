<%= turbo_frame_tag dom_id(@profile) do %>    

        
    <%= tag.div class: "w-full px-2 mx-auto sm:max-w-2xl gap-4" do %>

        <%= tag.div class: "
                w-full inline-flex items-center px-4 py-2 gap-4 border-2 bg-gray-500 text-white border-gray-500
                peer-checked/radio:bg-gray-500 peer-checked/radio:text-white" do %>
            <%= tag.p "3.", class: "h-6 w-6 text-center rounded-full text-white bg-gray-500" %>
            <%= tag.p params[:id].humanize.titleize %>
        <% end %>

        <%= form_with model: @profile, url: wizard_path, data: { turbo_action: "advance", turbo_frame: :_top} do |f| %>
            
            <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
                <%= f.label :nome_banca, class: "text-sm", value: "Banca" %>
                <%= f.text_field :nome_banca, class: "w-full px-2 py-1 outline-none border-b-2 border-zinc-300 hover:border-slate-500 focus:border-slate-500 "%>
                <%= tag.p f.object.errors.full_messages_for(:nome_banca)&.first, class: "text-sm text-red-500" %>
            <% end %>

            <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
                <%= f.label :iban, class: "text-sm" %>
                <%= f.text_field :iban, class: "w-full px-2 py-1 outline-none border-b-2 border-zinc-300 hover:border-slate-500 focus:border-slate-500 "%>
                <%= tag.p f.object.errors.full_messages_for(:iban)&.first, class: "text-sm text-red-500" %>
            <% end %>

            <%= tag.div(class: "mt-5 w-full inline-flex gap-2 items-center justify-end") do %>
                <%= link_to "Indietro", previous_wizard_path, data: { turbo_action: "advance" }, class: "px-4 py-2 bg-gray-500 text-white"  %>
                <%= f.submit 'Salva', name: "submit", class: "px-4 py-2 bg-gray-500 text-white" %>
            <% end %>

        <% end %>
    <% end %>
<% end %>