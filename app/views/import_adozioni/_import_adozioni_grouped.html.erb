

<% if grouped == :titolo %>
    <% @import_scuola.import_adozioni.grouped_titolo.each do |c| %>
        
        <%= tag.div class:  "grid grid-cols-5 gap-1 mb-2" do %>

            <%= tag.div class: "col-span-3" do %>
                <%= render partial: "import_adozioni/card_titolo", locals: { import_adozione: c, is_header: true, is_mia: false } %>
            <% end %>	  

            <%= tag.div class: "col-span-2 pr-1 grid grid-cols-2 gap-1 sm:grid-cols-4 sm:gap-4" do %>
                <% adozioni =  @import_scuola.import_adozioni.find  c.import_adozioni_ids %>
                <% adozioni.sort_by(&:SEZIONEANNO).each do |a| %>
                    <%= render partial: "import_adozioni/card_classe", locals: { import_adozione: a, is_header: false, is_mia: a.mia_adozione?(current_user.miei_editori) } %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>

<% elsif grouped == :classe %>

    <% @import_scuola.import_adozioni.grouped_classe.each do |c| %>
    
        <%= tag.div class: [
                    "my-3 px-3 grid grid-cols-5 border-b": true    
        ] do %>

            <%= tag.div class: "col-span-1 p-2.5 border rounded-md flex flex-col" do %>
                <%= render partial: "import_adozioni/card_classe", locals: { import_adozione: c } %>
            <% end %>
            
            <%= tag.div class: "col-span-4 grid grid-cols-1 sm:grid-cols-3 sm:gap-2 sm" do %>
                <% adozioni =  @import_scuola.import_adozioni.find  c.import_adozioni_ids %>
                <% adozioni.sort_by(&:PREZZO).each do |a| %>

                    <%= render partial: "import_adozioni/card_titolo", locals: { import_adozione: a, is_header: false, is_mia: a.mia_adozione?(current_user.miei_editori) } %>

                <% end %>
            <% end %>
        <% end %>
    <% end %>

<% end %> 

