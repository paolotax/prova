<%# header per le tappe %>
<%= tag.div class: "w-full space-x-8 px-3 py-3 text-xs font-semibold flex flex-wrap items-center justify-end" do %>
        
    <%= form_with url: bulk_update_import_adozioni_path, method: :put, format: "pdf", id: :bulk_update_import_adozioni_form, action: "action-page",
            data: { turbo: false, tax_checkbox_select_all_target: "formMulti" },
            class: "pr-2" do |f| %>

        <%= tag.div class: "flex space-x-2 items-center" do %>
            <%= f.button type: :submit, value: 'stampa', 
                    class: "px-2 py-0.5 text-center font-semibold text-red-500 align-middle cursor-pointer border hover:bg-gray-200 h-6 rounded-full shadow-lg" do %>
                Etichette
            <% end %>
        <% end %>
    <% end %>  

    <%= tag.label for: "select_all", id: "select_all" do %>
        <%= check_box_tag "select_all", nil, false, data: { tax_checkbox_select_all_target: "checkboxAll" } %>
        <%= tag.span  "seleziona", data: { tax_checkbox_select_all_target: "label" }, class: "pl-2" %>
    <% end %>
<% end %>