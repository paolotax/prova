 <%# locals: ( import_adozione:, is_header: true, is_mia: false ) -%>

<%= tag.div class: [
                "py-2 px-2 w-full border rounded-lg": true,
                "bg-white":  !is_mia,
                "bg-yellow-200": is_mia   
            ] do %>

    <%= tag.div class: "h-full flex flex-col justify-between" do %>
        
        <%= tag.div class: "flex flex-row justify-between" do %>            
            <%= link_to import_adozione.titolo, import_adozioni_path(search: import_adozione.CODICEISBN), class: "text-gray-800 hover:text-sky-500 font-semibold leading-4 pt-1 pb-1.5"  %>
        
            <% unless is_header %>
                <%= render partial: "import_adozioni/card_menu", locals: { import_adozione: import_adozione }%>
            <% end %>


        <% end %>

        <%= tag.div class: "my-auto flex flex-col " do %>
            <%= link_to import_adozione.editore, import_adozioni_path(search: import_adozione.editore, da_acquistare: "si"), class: "text-gray-500 hover:text-sky-500 font-semibold text-xs truncate" %>
            <%= link_to import_adozione.disciplina, import_adozioni_path(search: import_adozione.disciplina, classe: import_adozione.classe ), class: "text-gray-500 hover:text-sky-500 font-semibold text-xs truncate" %>
        <% end %> 
     <% end %>

<% end %>



