<%# locals: ( reload: false ) -%>

<%= component 'tax_filter_form', base_url: import_adozioni_path, reload: false,
    hidden_fields: { grouped_by: params[:grouped_by] || 'titolo' },
    fields: [ 
        {
            field: :search,
            label: "Cerca",
            collection: nil,
            type: :text,
            placeholder: "cerca..."
        }, {
            field: :mie_adozioni,
            label: "adozioni",
            collection: ["si", "no"],
            type: :checkbox,
            placeholder: "mie adozioni"
        }, {
            field: :da_acquistare,
            label: "acquistare",  # uso la label per queryopt
            collection: ["si", "no"],
            type: :checkbox,
            placeholder: "da acquistare"
        }, {
            field: :classe,
            label: "Classe",
            collection: ["1", "2", "3", "4", "5"],
            type: :checkbox_group,
            placeholder: "classe..."
        }, {
            field: :disciplina,
            label: "Disciplina",
            collection: @lista_discipline,
            type: :checkbox_group,
            placeholder: "disciplina..."
        }, {
            field: :nel_baule,
            label: "Nel baule",
            collection: ["oggi", "domani"],
            type: :select,
            placeholder: "nel baule?"
        }
] %>