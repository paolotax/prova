 <%# locals: ( import_adozione:, tipo_card: 'classe' ) -%>
 
<%= tag.div id: "card-ssk-#{ tipo_card }-#{ dom_id import_adozione }", class: "flex flex-row justify-end" do %>

    <%= tag.div class: [
        "h-5 w-5 ml-1 p-1 rounded-full font-semibold flex flex-col justify-center items-center cursor-pointer bg-red-500 text-white font-semibold text-xs": true,
        "hidden": import_adozione.saggi.empty?
        ] do %>

        <% unless import_adozione.saggi.empty? %>

            <%= link_to appunto_path(import_adozione.saggi_ids.compact.first), 
                data: { turbo_method: :delete } do %> 
                <%= import_adozione.saggi.size %>
            <% end %>

        <% end %>
    <% end %>
    
    <%= tag.div class: [
            "h-5 w-5 ml-1 p-1 rounded-full font-semibold flex flex-col justify-center items-center cursor-pointer bg-sky-500 text-white font-semibold text-xs": true,
            "hidden": import_adozione.seguiti.empty?
        ] do %>

        <% unless import_adozione.seguiti.empty? %>

            <%= link_to appunto_path(import_adozione.seguiti_ids.compact.first), 
                data: { turbo_method: :delete } do %> 
                <%= import_adozione.seguiti.size %>
            <% end %>

        <% end %>
    <% end %>
    
    <%= tag.div class: [
            "h-5 w-5 ml-1 p-1 rounded-full font-semibold flex flex-col justify-center items-center cursor-pointer bg-pink-400 text-white font-semibold text-xs",
            "hidden": import_adozione.kit.empty?
        ] do %>

        <% unless import_adozione.kit.empty? %>

            <%= link_to appunto_path(import_adozione.kit_ids.compact.first), 
                data: { turbo_method: :delete } do %> 
                <%= import_adozione.kit.size %>
            <% end %>

        <% end %>
    <% end %>

<% end %>
