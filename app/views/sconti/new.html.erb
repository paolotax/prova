<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">
      Nuovo sconto
      <% if @scontabile %>
        per <%= @scontabile.class.model_name.human %>: <%= @scontabile %>
      <% end %>
    </h1>
    <p class="mt-2 text-sm text-gray-600">
      <% if @scontabile.is_a?(Cliente) %>
        Crea uno sconto di vendita per questo cliente
      <% elsif @scontabile.is_a?(Editore) %>
        Crea uno sconto di acquisto per questo editore
      <% else %>
        Crea uno sconto globale
      <% end %>
    </p>
  </div>

  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-lg p-6">
    <%= render "form", sconto: @sconto %>
  </div>
</div>
