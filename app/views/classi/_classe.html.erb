<%= tag.div dom_id(classe), class: "inline-block p-2 bg-blue-500 text-white border rounded-md m-1" do %>

    <%= tag.div class: "flex flex-row text-md font-medium items-center" do %>
        
        <%= link_to classe_path(classe), class: "flex items-end" do%>
            

                <%= tag.span classe.classe_e_sezione, class: "font-bold" %>
                <%#= tag.span classe.sezione.titleize %>

            <%= tag.span class: "pl-2 pb-0.5 text-xs" do %>
                <%= classe.combinazione.downcase %>
            <% end %>
        
        <% end %>

        <%# qui ci devo mettere il menu %>
        <%= link_to new_adozione_path(classe_id: classe.id), 
                data: { turbo_frame: :modal, action: "click->dialog#open"}, 
                class: "w-6 h-6 rounded-full flex align-center text-gray-400 text-sm p-0.5 items-center" do %>
            <%= inline_svg_tag "icon-ellipsis-vertical.svg" %>
        <% end %>
    <% end %>

<% end %>
