 <%# locals: ( scuola:, classe_ids: [] ) -%>

<%= turbo_frame_tag :combo_classi do %>

    <% if action_name == "edit" %>
        <div class="my-5  youtubes">
            <%= combobox_tag "adozione[classe_id]", 
                    scuola.classi,
                    value: classe_ids[0],
                    placeholder: "seleziona classe...",
                    label: "per la classe:" %>
        </div>
    <% else %>
        <div class="my-5  youtubes">
            <%= combobox_tag "adozione[classe_ids]", 
                    scuola.classi,
                    value: classe_ids, 
                    multiselect_chip_src: new_classe_chip_path, 
                    placeholder: "seleziona classi...",
                    label: "per le classi:" %>
        </div>
    <% end %>

<% end %>