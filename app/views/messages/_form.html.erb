<%= form_with(model: message, url: [@chat, message], id: "new_message", class: "flex flex-col space-y-4") do |form| %>
  <% if message.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(message.errors.count, "errore", "errori") %> ha impedito il salvataggio di questo messaggio:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% message.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex space-x-4">
    <!-- Message Input -->
    <div class="flex-1">
      <%= form.text_area :content,
          rows: 3,
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm resize-none",
          placeholder: "Scrivi il tuo messaggio qui... (Markdown supportato)",
          autofocus: true,
          data: {
            action: "keydown->message-form#handleKeydown"
          } %>
      <p class="mt-1 text-xs text-gray-500">
        Premi <kbd class="px-1 py-0.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded">Ctrl + Invio</kbd> per inviare
      </p>
    </div>

    <!-- Send Button -->
    <div class="flex-shrink-0 flex items-end">
      <%= form.submit "Invia",
          class: "inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed",
          data: {
            disable_with: "Invio in corso..."
          } %>
    </div>
  </div>
<% end %>

<script data-turbo-permanent>
  document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.querySelector('#message_content');
    if (textarea) {
      // Handle Ctrl+Enter to submit
      textarea.addEventListener('keydown', function(e) {
        if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
          e.preventDefault();
          const form = this.closest('form');
          if (form && this.value.trim()) {
            form.requestSubmit();
          }
        }
      });

      // Auto-resize textarea
      function autoResize() {
        textarea.style.height = 'auto';
        textarea.style.height = Math.min(textarea.scrollHeight, 150) + 'px';
      }

      textarea.addEventListener('input', autoResize);
      autoResize(); // Initial resize
    }
  });
</script>