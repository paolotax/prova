<div class="space-y-2">
  <div class="flex items-center gap-2 text-sm font-medium text-purple-700">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
    </svg>
    Chiamate Strumenti
  </div>

  <div class="space-y-2">
    <% message.tool_calls.each do |tool_call| %>
      <div class="bg-purple-50 border border-purple-200 rounded-lg p-3 font-mono text-sm">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <div class="font-semibold text-purple-800 mb-2">
              <%= tool_call.name %>
            </div>

            <% if tool_call.arguments.present? %>
              <div class="text-purple-700">
                <div class="text-xs font-medium text-purple-600 mb-1">Argomenti:</div>
                <div class="bg-white rounded border border-purple-200 p-2 text-xs overflow-x-auto">
                  <pre class="whitespace-pre-wrap"><%= JSON.pretty_generate(tool_call.arguments) %></pre>
                </div>
              </div>
            <% end %>
          </div>

          <div class="ml-2 flex-shrink-0">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
              Strumento
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>