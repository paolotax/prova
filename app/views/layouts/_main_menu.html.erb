<div class="sticky top-0 z-30 flex h-16 shrink-0 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-sm sm:gap-x-6 sm:px-6 lg:px-8">
    
    <div tabindex="-1">
        <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden"
            data-tax-sidebar-target="element"
            data-action="click->slideover#toggle click@window->slideover#hide"
            >
            <span class="sr-only">Apri sidebar</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
        </button>
	</div>

    <!-- Separator -->
    <div class="h-6 w-px bg-gray-900/10 lg:hidden" aria-hidden="true"></div>

    <div class="flex flex-1 gap-x-4  items-center lg:gap-x-6">

        <% if current_user %>         
 
            <!-- Search form -->
            <%= render partial: "layouts/search_form" %>
            
            <div class="flex items-center gap-x-4 lg:gap-x-6">
                
                <!-- Notification button -->
                <div class="hidden lg:block">
                    <button type="button" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">
                        <span class="sr-only">View notifications</span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
                        </svg>
                    </button>
                </div>

                <!-- Separator -->
                <div class="hidden lg:block lg:h-6 lg:w-px lg:bg-gray-900/10" aria-hidden="true"></div>

                <!-- Profile dropdown -->
                <div 
                    data-controller="dropdown" 
                    data-action="click->dropdown#toggle click@window->dropdown#hide"

                    class="relative">
            
                    <button 
                        type="button" class="-m-1.5 flex items-center p-1.5" 
                        id="user-menu-button" aria-expanded="false" aria-haspopup="true"
                        data-dropdown-target="button">
                        <span class="sr-only">Open user menu</span>
                        <%= image_tag "default_avatar.jpg", class: "h-8 w-8 rounded-full bg-gray-50" %>
                        
                        <span class="hidden lg:flex lg:items-center">
                            <span class="ml-4 text-sm font-semibold leading-6 text-gray-900" aria-hidden="true">
                                <%= current_user.name %>
                            </span>
                            <svg class="ml-2 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                            </svg>
                        </span>
                    </button>

                    <div 
                        data-dropdown-target="menu"

                        data-transition-enter="transition ease-out duration-200"
                        data-transition-enter-from="opacity-0"
                        data-transition-enter-to="opacity-95"
                        data-transition-leave="transition ease-in duration-150"
                        data-transition-leave-from="opacity-95"
                        data-transition-leave-to="opacity-0"

                        class="hidden absolute right-0 z-10 mt-2.5 w-32 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                        <!-- Active: "bg-gray-50", Not Active: "" -->
                        <%= link_to current_user,
                                class: "block px-3 py-1 text-sm leading-6 text-gray-900",
                                role: "menuitem", tabindex: "-1", id: "user-menu-item-0" do 
                            %>
                            Il mio profilo
                        <% end %>
                                      
                        <%= link_to "Esci", destroy_user_session_path, data: { turbo_method: :delete },
                                class: "block px-3 py-1 text-sm leading-6 text-gray-900", role: "menuitem", tabindex: "-1", id: "user-menu-item-1"
                        %>

                    </div>
                </div>
            </div>
        <% else %>
            <div class="flex flex-1 justify-between">
                <div></div>
                <%= link_to "Accedi o registrati", new_user_session_path, class: "px-3 py-1 text-sm font-semibold leading-6 text-gray-900 hover:text-gray-500" %>
            </div>
        <% end %>

    </div>
</div>
