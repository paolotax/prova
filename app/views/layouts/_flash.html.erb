<div id="notice" data-controller="flash" class="relative">
    
    <div class="absolute top-6 z-40 mx-auto w-full flex">        
        <% if notice.present? %>
            <p class="mx-auto py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"><%= notice %></p>
        <% elsif alert.present?  %>
            <p class="mx-auto py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block"><%= alert %></p>
        <% end %>
    </div>

</div>



