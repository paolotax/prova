<% frame_id = dom_id(model, "#{method}_turbo_frame") %>

<%= form_with model: model, class: "contents", data: { turbo_frame: frame_id } do %>
  
  <turbo-frame id="<%= frame_id %>" class="contents group/riga group inline-edit w-full flex items-center justify-between">
    <%= yield %>

    <%= link_to edit_polymorphic_path(model) do %>
      <%= inline_svg_tag  "icon-pencil.svg", class: "invisible group-hover/riga:visible ml-1 p-0.5" %>
    <% end %>
  </turbo-frame>

<% end %>