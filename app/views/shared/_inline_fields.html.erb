<% frame_id = dom_id(form.object, "#{method}_turbo_frame") %>

<turbo-frame id="<%= frame_id %>" class="contents">
  
  <%= yield %>

  <%= tag.div class: "ml-1 flex items-center space-x-1.5" do %>

    <%= form.button class: "hidden group-[.inline-edit]:inline-block  font-semibold rounded-full rounded-full bg-blue-500 text-white" do %>
      <%= inline_svg_tag  "icon-check.svg", class: "p-1" %>
      <!--Save <%#= form.object.class.human_attribute_name(method) %>-->
    <% end %>
    
    <%= link_to polymorphic_path(form.object), class: "hidden group-[.inline-edit]:inline-block  font-semibold rounded-full bg-gray-400 text-white" do %>
      <%= inline_svg_tag  "icon-x-mark.svg", class: "p-1" %>
    <% end %>

  <% end %>

</turbo-frame>