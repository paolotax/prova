<%= turbo_frame_tag :modal do %>

    <dialog 
        
        data-controller="old-dialog"
        data-action="click->old-dialog#clickOutside"
        class="z-10 backdrop:bg-black backdrop:bg-opacity-80 
            transform overflow-y-scroll rounded-lg bg-white
            shadow-xl transition-all 
            max-w-screen-sm w-full sm:max-w-screen-md 
            border-0 mt-12 block sm:my-8 
            sm:w-full px-4 py-4 sm:p-6" 
        >
        <div class="absolute right-4 top-4 sm:block">
            <button type="button" tabindex="-1" data-action="old-dialog#close" 
                class="rounded-md bg-white text-gray-400 hover:text-gray-500 
                        focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
                >
                <span class="sr-only">Close</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        
        <%= yield %>

    </dialog>

<% end %>




