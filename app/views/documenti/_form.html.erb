<%= form_with(model: documento, class: "contents") do |form| %>
    
    <% if documento.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
            <h2>
                <%= pluralize(documento.errors.count, "errore impedisce", "errori impediscono") %> di salvare il documento:
            </h2>
            <ul>
                <% documento.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
  
    <div class="flex justify-start items-center space-x-2" data-controller="tax-combobox-causale">
        
        <div class="my-5 cb-tax cb-medium flex flex-col space-y-2">
            <%= form.label :causale_id, "Tipo documento" %>
            <%= form.combobox :causale_id, Causale.all, label: "tipo documento:", 
                            placeholder: "seleziona tipo documento...",
                            data: { action: "hw-combobox:selection->tax-combobox-causale#change",
                                    tax_combobox_causale_target: "combobox" }%>
        </div>
    
        <div class="my-5">
            <%= form.label :numero_documento, "Numero" %>
            <%= form.number_field :numero_documento, class: "field w-32", 
            data: { tax_combobox_causale_target: "prezzo" } %>
        </div>
    
        <div class="my-5">
            <%= form.label :data_documento, "Data" %>
            <%= form.date_field :data_documento, class: "field" %>
        </div>
    </div>

  <fieldset class="my-5 cb-tax cb-xlarge flex flex-col space-y-2">
      <%= form.label :clientable_id, "Cliente" %>
			<%= form.combobox :clientable_id, current_user.clienti.order(:denominazione), label: "cliente:", placeholder: "seleziona cliente..." %>      
      <%#  This is a hidden field that is used to store the type of the clientable DA MODIFICARE %>
      <%= form.hidden_field :clientable_type, value: "Cliente" %>	
  </fieldset>



  <div id="documento_righe">
    <%= render @documento.documento_righe %>
  </div>

  <div class="flex items-start mb-8">
    <%= render TaxButton.new(
                caption: "riga",
                svg_file: "icon-plus.svg",
                color: "blue",
                url: url_for( controller: "documento_righe", action: "new", model: @documento ),
                data_attr: { turbo_stream: true }
        ) %>
  </div>

  <div class="inline">
    <%= form.submit "Salva", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
