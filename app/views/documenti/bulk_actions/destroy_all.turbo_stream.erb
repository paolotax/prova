<%# Rimuove i documenti eliminati dalla lista %>
<% @ids.each do |id| %>
  <%= turbo_stream_action_tag_with_block "remove",
        target:  "documento_#{id}",
        data: {
            transition_leave: "transition ease-out duration-1000",
            transition_leave_start: "opacity-100",
            transition_leave_end: "opacity-0"
        } %>
  <% @figli_ids.each do |figlio_id| %>
    <% documento = Documento.find(figlio_id) %>
    <%= turbo_stream.prepend "documenti" do %>
        <%= render partial: "documenti/documento_con_figli", locals: { documento: documento } %>
    <% end %>
  <% end %>

<% end %>

<%#= turbo_stream.replace "notice", partial: "layouts/flash" %>
<%= stream_notification "Documenti eliminati!", type: "success" %>

