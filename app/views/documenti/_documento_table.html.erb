<tr class="border-b border-gray-200">
  <td class="relative py-5 pr-6">
    
    <div class="flex gap-x-6">
      <div class="flex-auto">
        <div class="flex items-start gap-x-3">
          <div class="text-sm font-medium leading-6 text-gray-900">
            <%= documento.tipo_documento %>
          </div>
        </div>
        <div class="mt-1 text-xs leading-5 text-gray-500">
          <%= link_to documento_path(documento), class:"hover:text-indigo-500 hover:font-semibold" do %>
            <%= "#{documento.numero_documento} del #{documento.data_documento.strftime('%d-%m-%y')}" %>
          <% end %>
        </div>
      </div>
    </div>  
  </td>
  
  <td class="hidden py-5 pr-6 sm:table-cell">
    <div class="text-sm leading-6 text-gray-900">
      <%= documento.fornitore %>
    </div> 
  </td>

  <td class="py-5 text-right">
    <div class="flex justify-end">
      
      <%= Money.from_cents( documento.totale_documento, :eur ).format(format: I18n.t(:format, scope: 'number.currency.format')) %>
    
    </div>
    <div class="mt-1 text-xs leading-5 text-gray-500">
      copie 
      <span class="text-gray-900">
        <%= documento.quantita_totale %>
      </span>
    </div>
  </td>


</tr>
