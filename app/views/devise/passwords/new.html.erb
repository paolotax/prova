<div class="px-6 py-12 lg:px-8 sm:mx-auto sm:w-full sm:max-w-sm">

	<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
		Hai dimenticato la password?
	</h2>

  	<div class="mt-10">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			<div>
				<%= f.label :email, "Email", class: "label" %>
				<div class= "mt-2">
					<%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "field" %>
				</div> 
			</div>
			<div class= "mt-6">
				<%= f.submit "Inviami le istruzioni per il recupero", class: "flex w-full justify-center rounded-md bg-gray-900 px-3.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900" %>
			</div>
		<% end %>

		<%- if controller_name != 'sessions' %>
			<p class="mt-10 text-center text-sm text-gray-500">
            	Ti Ã¨ tornata in mente? 
				<%= link_to "Accedi", new_session_path(resource_name), class: "font-semibold leading-6 text-gray-800 hover:text-gray-500" %>
        	</p>
		<% end %>

	</div>
</div>