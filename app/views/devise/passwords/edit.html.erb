<div class="px-6 py-12 lg:px-8 sm:mx-auto sm:w-full sm:max-w-sm">

	<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
		Modifica la password
	</h2>

	<div class="mt-10">

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			<%= f.hidden_field :reset_password_token %>
			<div class="space-y-6">
				<div>
					<div class="flex items-center justify-between">
						<label for="Nuova password" class="label">Password</label>
						<% if @minimum_password_length %>
							<em class="text-xs">(minimo <%= @minimum_password_length %> caratteri)</em>
						<% end %>
					</div>
					
					<div class="mt-2">
						<%= f.password_field :password, required: true, autocomplete: "new-password", class: "field" %>
					</div>
				</div>

				<div>
					<%= f.label :password_confirmation, "Conferma la password", class: "label" %>
					<div class= "mt-2">
						<%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "field" %>
					</div> 
				</div>

				<div>
					<%= f.submit "Modifica la password", class: "flex w-full justify-center rounded-md bg-gray-900 px-3.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900" %>
				</div>
			</div>
		<% end %>

		<%#= render "devise/shared/links" %>
	</div>
</div>
