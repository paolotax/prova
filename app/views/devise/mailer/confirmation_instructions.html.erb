<%#
  [RailsNotes UI Addition]
  Custom reset password mailer template, using the RailsNotes UI email components.
%>
<%= render Email::Plain::Container.new(
     padding: "32px 64px",
		 dark_mode_enabled: false
   ) do |container| %>
  <%= render Email::Heading.new(text: "Benvenuto. #{}") %>
  <%= render Email::Text.new(text: "Puoi confermare l'email del tuo account cliccando il pulsante") %>
  <%= render Email::PercentageButton.new(
        text: "Conferma l'account ▸▸▸",
        href: confirmation_url(@resource, confirmation_token: @token),
        bold: true,
        height: "12px",
        shadow: "none",
      ) %>
 
  <%= render Email::Colorblock.new(
        color: Email::Colors::RED_50,
        border_width: "0",
        border_radius: "12px",
        margin: "64px auto auto auto",
        padding: "16px 24px",
      ) do %>
    <%= render Email::Text.new(text: "ScagnoZZ", bold: true, letter_spacing: "-0.0375rem", margin: "8px auto", color: Email::Colors::GRAY_700) %>
    <%= render Email::Text.new(size: "12px", margin: "4px auto", color: Email::Colors::GRAY_600) do %>
      Visita <%= link_to "ScagnoZZ", "https://scagnozz.com" %> per saperne di più.
    <% end %>
    <%= render Email::Text.new(text: "© #{Time.now.year} ScagnoZZ", margin: "4px auto", size: "12px", color: Email::Colors::GRAY_600) %>
  <% end %>
<% end %>








