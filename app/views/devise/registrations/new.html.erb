<div class="px-12 py-12 lg:px-8 sm:mx-auto sm:w-full sm:max-w-sm">

	<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
		Registra un nuovo account
	</h2>

	<div class="mt-10">		

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			<div class="space-y-6">
				<div>
					<%= f.label :name, "Nome utente", class: "label" %>
					<div class= "mt-2">
						<%= f.text_field :name, autofocus: true, required: true, class: "field" %>
					</div> 
				</div>
				
				<div>
					<%= f.label :email, "Email", class: "label" %>
					<div class= "mt-2">
						<%= f.email_field :email, required: true, autocomplete: "email", class: "field" %>
					</div> 
				</div>

				<div>
					<div class="flex items-center justify-between">
						<label for="password" class="label">Password</label>
						<% if @minimum_password_length %>
							<em class="text-xs">(minimo <%= @minimum_password_length %> caratteri)</em>
						<% end %>
					</div>

					<div class="mt-2">
						<%= f.password_field :password, required: true, class: "field" %>
					</div>
				</div>

				<div>
					<%= f.label :password_confirmation, "Conferma la password", class: "label" %>
					<div class= "mt-2">
						<%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "field" %>
					</div> 
				</div>

				
				<div>
					<%= f.submit "Registra un nuovo account", class: "mt-10 flex w-full justify-center rounded-md bg-gray-900 px-3.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900" %>
				</div>

				<%= tag.div data: {controller: :turnstile, turnstile_site_key_value: Rails.application.credentials.dig(:turnstile, :site_key)}, class: "pl-2" %>

			</div>
		<% end %>
		<%- if controller_name != 'sessions' %>
			<p class="mt-10 text-center text-sm text-gray-500">
            	Sei gi√† registrato?
				<%= link_to "Accedi", new_session_path(resource_name), class: "font-semibold leading-6 text-gray-800 hover:text-gray-500" %>
        	</p>
		<% end %>

	</div>
</div>

		
