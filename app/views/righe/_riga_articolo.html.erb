<tr class="border-b border-gray-200">

  <td class="max-w-0 py-5 pl-4 pr-3 text-sm sm:pl-0">
    <div class="font-medium text-gray-900">
      <%= riga.fornitore %>
    </div>
    <div class="mt-1 truncate text-gray-500">
      <%= riga.tipo_documento %>
      <%= riga.numero_documento %>
      <%= riga.data_documento %>
    </div>
  </td>
  <td class="hidden px-3 py-5 text-right text-sm text-gray-500 sm:table-cell">
    <%= number_to_currency riga.prezzo_unitario, locale: :it %>
  </td>
  <td class="px-3 py-5 text-right text-sm text-gray-500">
    <%= riga.quantita %>
  </td>
  <td class="hidden px-3 py-5 text-right text-sm text-gray-500 sm:table-cell">
    <%= 
      if riga.sconto.nil? then
        ''
      else
        riga.sconto.to_s + ' %' 
      end
        %>
  </td>
  <td class="py-5 pl-3 pr-4 text-right text-sm font-medium text-gray-900 sm:pr-0">
    <%= if riga.importo_netto == 0 then
          ''
        else
          number_to_currency riga.importo_netto, locale: :it
        end
      %>
  </td>

</tr>

