<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
	
	<%= form_with model: user, class: "space-y-6" do |f| %>
		
		<%= render "shared/errors", object: user %>

		<div>
			<%= f.label :name, "Nome", class: "label" %>
			<div class="mt-2">
				<%= f.text_field :name, autofocus: true,
					class:"field"	
				%>
			</div>
		</div>

		<div>
			<%= f.label :email, class: "label" %>
			<div class="mt-2">
				<%= f.email_field :email, 
					class:"field",
					placeholder: "you@example.com" 
				%>
			</div>
		</div>

		<div>
			<%= f.label :partita_iva, class: "label" %>
			<div class="mt-2">
				<%= f.text_field :partita_iva,
					class:"field"
				%>
			</div>
		</div>

		<div>
			<%= f.label :navigator, class: "label" %>
			<div class="mt-2">
				<%= f.select :navigator, ["apple", "google", "waze"], {}, {class: "field"} %>
			</div>
		</div>

		<div>
			<%= f.label :password, class: "label" %>
			<div class="mt-2">					
				<%= f.password_field :password,				
					class:"field"
				%>
			</div>
		</div>
		<div>
			<%= f.label :password_confirmation, "Conferma Password", class: "label" %>
			<div class="mt-2">
				<%= f.password_field :password_confirmation, 				
					class:"field"
				%>
			</div>
		</div>

		
		<% if user.new_record? %>
			<%= f.submit "Crea Utente", class: "flex w-full justify-center rounded-md bg-gray-900 px-3.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900" %>
		<% else %>
			<%= f.submit "Modifica Utente", class: "flex w-full justify-center rounded-md bg-gray-900 px-3.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900" %>
		<% end %>


	<% end %>
</div>
