<%= form_with(model: qrcode, class: "contents") do |form| %>
  <% if qrcode.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(qrcode.errors.count, "error") %> prohibited this qrcode from being saved:</h2>

      <ul class="list-disc ml-6">
        <% qrcode.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": qrcode.errors[:description].none?, "border-red-400 focus:outline-red-600": qrcode.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": qrcode.errors[:url].none?, "border-red-400 focus:outline-red-600": qrcode.errors[:url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :qrcodable_id %>
    <%= form.text_field :qrcodable_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": qrcode.errors[:qrcodable_id].none?, "border-red-400 focus:outline-red-600": qrcode.errors[:qrcodable_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
