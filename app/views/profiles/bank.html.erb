<%= tag.div class: "p-2 sm:w-2/3 mx-auto" do %>
    <%= form_for @profile, url: wizard_path, method: :put do |f| %>
        
        <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
            <%= f.label :ragione_sociale, class: "text-sm" %>
            <%= f.text_field :ragione_sociale, class: "w-full px-2 py-1 outline-none border-b-2 border-zinc-300 hover:border-slate-500 focus:border-slate-500 "%>
            <%= tag.p f.object.errors.full_messages_for(:ragione_sociale)&.first, class: "text-sm text-red-500" %>
        <% end %>

        <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
            <%= f.label :indirizzo, class: "text-sm" %>
            <%= f.text_field :indirizzo, class: "w-full px-2 py-1 outline-none border-b-2 border-zinc-300 hover:border-slate-500 focus:border-slate-500 "%>
            <%= tag.p f.object.errors.full_messages_for(:indirizzo)&.first, class: "text-sm text-red-500" %>
        <% end %>

        <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
            <%= f.label :cap, class: "text-sm" %>
            <%= f.text_field :cap, class: "w-full px-2 py-1 outline-none border-b-2 border-zinc-300 hover:border-slate-500 focus:border-slate-500 "%>
            <%= tag.p f.object.errors.full_messages_for(:cap)&.first, class: "text-sm text-red-500" %>
        <% end %>

        <%= tag.div class: "w-full mt-5 flex flex-col gap-2" do %>
            <%= f.label :citta, class: "text-sm" %>
            <%= f.text_field :citta, class: "w-full px-2 py-1 outline-none border-b-2 border-zinc-300 hover:border-slate-500 focus:border-slate-500 "%>
            <%= tag.p f.object.errors.full_messages_for(:citta)&.first, class: "text-sm text-red-500" %>
        <% end %>

        <%= tag.div(class: "mt-5 w-full inline-flex gap-2 items-center justify-end") do %>
            <%#= link_to "Indietro", previous_wizard_path, class: "px-4 py-2 bg-gray-500 text-white"  %>
            <%= f.submit 'Salva', name: "submit", class: "px-4 py-2 bg-gray-500 text-white" %>
        <% end %>

    <% end %>
<% end %>