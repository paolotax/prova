<%= tag.div class: "min-h-[calc(100vh-80px)] flex items-center justify-center" do %>
	<%= tag.div class: "max-w-md w-full grid grid-cols-2 gap-4 p-4" do %>

		<%= link_to voice_notes_path,
			class: "hotwire-native:hidden aspect-square rounded-xl bg-sky-500 hover:bg-sky-600 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "microphone", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Vocals</span>
			</div>
		<% end %>

		<%= link_to appunti_path,
			class: "aspect-square rounded-xl bg-rose-600 hover:bg-rose-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "pencil", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Appunti</span>
			</div>
		<% end %>

		<%= link_to giorno_path(giorno: Date.today),
			class: "aspect-square rounded-xl bg-pink-500 hover:bg-pink-600 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "map-pin", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Oggi</span>
			</div>
		<% end %>

		<%= link_to agenda_path(giorno: Date.today),
			class: "aspect-square rounded-xl bg-lime-500 hover:bg-lime-600 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "calendar", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Agenda</span>
			</div>
		<% end %>

		<%= link_to import_scuole_path,
			class: "aspect-square rounded-xl bg-amber-500 hover:bg-amber-600 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "academic-cap", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Scuole</span>
			</div>
		<% end %>

		<%= link_to import_adozioni_path,
			class: "aspect-square rounded-xl bg-teal-600 hover:bg-teal-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "currency-euro", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Adozioni</span>
			</div>
		<% end %>


		<%= link_to documenti_path,
			class: "aspect-square rounded-xl bg-violet-600 hover:bg-violet-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "document", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Documenti</span>
			</div>
		<% end %>

		<%= link_to ordini_in_corso_path,
			class: "aspect-square rounded-xl bg-orange-500 hover:bg-orange-600 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "shopping-cart", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Ordini</span>
			</div>
		<% end %>

		<%= link_to giri_path,
			class: "aspect-square rounded-xl bg-cyan-600 hover:bg-cyan-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "map", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Giri</span>
			</div>
		<% end %>

		<%= link_to libri_path,
			class: "aspect-square rounded-xl bg-emerald-600 hover:bg-emerald-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "book-open", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Libri</span>
			</div>
		<% end %>

		<%= link_to stats_path,
			class: "aspect-square rounded-xl bg-blue-600 hover:bg-blue-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "chart-bar", class: "w-8 h-8 mx-auto mb-2" %>
				<span>Stats</span>
			</div>
		<% end %>

		<% if current_user.admin? %>
			<%= link_to chats_path,
				data: { turbo: false },
				class: "hotwire-native:hidden aspect-square rounded-xl bg-fuchsia-600 hover:bg-fuchsia-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
				<div class="text-center">
					<%= icon "chat-bubble-left-right", class: "w-8 h-8 mx-auto mb-2" %>
					<span>Chat GPT</span>
				</div>
			<% end %>
		<% end %>

		<%= link_to destroy_user_session_path,
			data: { turbo_method: :delete },
			class: "col-span-2 rounded-xl bg-slate-600 hover:bg-slate-700 text-white font-bold p-4 shadow-lg hover:shadow-xl transition-all flex items-center justify-center" do %>
			<div class="text-center">
				<%= icon "arrow-right-on-rectangle", variant: :solid, options: { class: "w-6 h-6 mx-auto" } %>
				<span>Esci</span>
			</div>
		<% end %>
	<% end %>
<% end %>
