<%= render Heading::WithActionsComponent.new do |heading| %>
    <% heading.with_action do %>
        <%= button_tag type: 'submit', form: "stat_form", class: "btn btn-indigo" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span>Salva</span>
        <% end %>
    <% end %>
    <% heading.with_action do %>
        <%= component 'tax_button',
                caption: "Stats...",
                svg_file: "icon-chart-pie.svg",
                color: "white",
                url: url_for( controller: "stats", action: "index" ) %>
    <% end %>

    <%= h1 {"Nuova statistica"} %>
<% end %>

<div class="mx-auto w-full">
  <%= render "form", stat: @stat %>
</div>
