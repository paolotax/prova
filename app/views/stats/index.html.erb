<%= render Heading::WithActionsComponent.new do |heading| %>
	<% if current_user.admin? %>
		<% heading.with_action do %>
			<%= component 'tax_button',
					caption: "Nuovo",
					svg_file: "icon-plus.svg",
					color: "blue",
					url: url_for( controller: "stats", action: "new" ) %>
		<% end %>
	<% end %>

	<%= h1 { "Statistiche" } %>
<% end %>

<div class="border-b border-gray-200 mb-6">
	<nav class="-mb-px flex space-x-8 justify-center" aria-label="Tabs">
		<%= link_to stats_path,
				class: "#{params[:categoria].blank? ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-3 px-2 border-b-2 font-medium text-base flex items-center" do %>
			<%= icon "list-bullet", class: "w-5 h-5 mr-2" %>
			<span>Tutte</span>
		<% end %>

		<%= link_to stats_path(categoria: "utenti"),
				class: "#{params[:categoria] == 'utenti' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-3 px-2 border-b-2 font-medium text-base flex items-center" do %>
			<%= icon "user", class: "w-5 h-5 mr-2" %>
			<span>Utente</span>
		<% end %>

		<%= link_to stats_path(categoria: "titoli"),
				class: "#{params[:categoria] == 'titoli' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-3 px-2 border-b-2 font-medium text-base flex items-center" do %>
			<%= icon "book-open", class: "w-5 h-5 mr-2" %>
			<span>Titoli</span>
		<% end %>

		<%= link_to stats_path(categoria: "editori"),
				class: "#{params[:categoria] == 'editori' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-3 px-2 border-b-2 font-medium text-base flex items-center" do %>
			<%= icon "building-office", class: "w-5 h-5 mr-2" %>
			<span>Editori</span>
		<% end %>

		<%= link_to stats_path(categoria: "province"),
				class: "#{params[:categoria] == 'province' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-3 px-2 border-b-2 font-medium text-base flex items-center" do %>
			<%= icon "map", class: "w-5 h-5 mr-2" %>
			<span>Province</span>
		<% end %>

		<%= link_to stats_path(categoria: "altre"),
				class: "#{params[:categoria] == 'altre' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-3 px-2 border-b-2 font-medium text-base flex items-center" do %>
			<%= icon "chart-bar", class: "w-5 h-5 mr-2" %>
			<span>Altre</span>
		<% end %>
	</nav>
</div>

<%= turbo_frame_tag "search_results" do %>
	<div class="sm:mx-0 rounded-lg overflow-hidden border border-gray-300">
		<table class="min-w-full overflow-x-auto divide-y divide-gray-300">
			<thead class="bg-black text-white text-left py-2">
				<tr class="py-4">
					<th scope="col" class=""></th>
					<th scope="col" class="">Categoria</th>
					<th scope="col" class="">Descrizione</th>
					<th scoptext-sme="col" class="">Anno</th>
					<th scope="col" class="hidden md:table-cell">Raggruppa per...</th>
					<% if current_user.admin? %>
						<th scope="col" class="text-center"></th>
						<th scope="col" class="text-center"></th>
					<% end %>
				</tr>
			</thead>

			<tbody data-controller="tax-sortable" data-tax-sortable-group-value="stats">
				<%= render @stats %>
			</tbody>
		</table>
	</div>
<% end %>

