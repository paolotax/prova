<%= render Heading::WithActionsComponent.new(
	wrapper_css: 'flex items-center bg-white justify-between px-4 py-3 mb-4 border border-gray-200 rounded-md shadow-md', 
	level: 'h3') do |heading| %>
	
	<% heading.with_leader do %>
		<%#= render AvatarComponent.new(user: OpenStruct.new(name: "Cam"), size: "xl") %>
	<% end %>
	
	<% heading.with_description { @libro.codice_isbn } %>

	<% heading.with_action do %>
		<%= component 'tax_button',
			caption: "Elimina",
			svg_file: "icon-trash-real.svg",
			color: "red",
			url: url_for( controller: "libri", action: "destroy", model: @libro ),
			data_attr: { turbo_method: :delete, turbo_confirm: "Sei sicuro?", turbo_stream: false }  %>
	<% end %>

	<% heading.with_action do %>	
		<%= component 'tax_button',
			caption: "Indietro",
			svg_file: "icon-arrow-long-left.svg",
			color: "white",
			url: request.referrer %>
	<% end %>

	<% heading.with_action do %>
		<%= component 'tax_button',
			caption: "Modifica",
			svg_file: "icon-pencil.svg",
			color: "yellow",
			url: url_for( controller: "libri", action: "edit", model: @libro ),
			data_attr: { turbo_frame: :modal, action: "click->dialog#open" } %>
	<% end %>

	<%= @libro.titolo %>
  
<% end %>

<ul>
  <% @libro.documento_righe.each do |documento_riga| %>
		<%= render ListItemComponent.new() do |list_item| %>
			<% list_item.with_leader do %>

				<%= tag.span documento_riga.riga.quantita, class: "text-base font-semibold text-gray-800 w-16 px-4 text-right" %>

			<% end %>
			<% list_item.with_action do %>
				<%#= link_to "Revoke session", "#", class: "text-sm font-medium text-red-600 hover:text-red-800" %>
			<% end %>
			<div>
				<%= tag.p documento_riga.documento.clientable.denominazione, class: "text-sm font-normal textgray-500" %>
				<%= component "tax_documento_card", documento: documento_riga.documento %>
			</div>
		<% end %>
  <% end %>
</ul>

<%= render @libro.adozioni %>
