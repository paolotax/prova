<% content_for :title, "Modifica Adozione Comunicata" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Modifica Adozione Comunicata</h1>
    
    <div class="bg-white p-6 rounded-lg shadow">
      <%= form_with model: @adozione_comunicata, local: true do |form| %>
        <% if @adozione_comunicata.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <h3 class="text-sm font-medium text-red-800 mb-2">Errori:</h3>
            <ul class="text-sm text-red-700 list-disc list-inside">
              <% @adozione_comunicata.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= form.label :editore, "Editore", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :editore, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :ean, "EAN/ISBN", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :ean, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :titolo, "Titolo", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :titolo, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :classe, "Classe", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :classe, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :sezione, "Sezione", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :sezione, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :alunni, "Numero Alunni", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :alunni, min: 1, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :cod_ministeriale, "Codice Ministeriale", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :cod_ministeriale, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :descrizione_scuola, "Nome Scuola", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :descrizione_scuola, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :indirizzo, "Indirizzo", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :indirizzo, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :cap, "CAP", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :cap, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :comune, "Comune", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :comune, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :provincia, "Provincia", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :provincia, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
          
          <div>
            <%= form.label :anno_scolastico, "Anno Scolastico", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :anno_scolastico, class: "block w-full rounded-md border-gray-300 shadow-sm" %>
          </div>
        </div>
        
        <div class="mt-6 flex gap-2">
          <%= form.submit "Aggiorna", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg" %>
          <%= link_to "Annulla", @adozione_comunicata, 
              class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>